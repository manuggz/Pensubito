<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrimestreMateriaAddActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tr_add_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nombre_materia"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_school_gray_24dp" />

            <TextView
                android:id="@+id/tv_nombre_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/iv_nombre_materia"
                android:layout_toRightOf="@id/iv_nombre_materia"
                android:text="Nombre" />

            <EditText
                android:id="@+id/et_nombre_materia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nombre_materia"
                android:layout_toEndOf="@id/iv_nombre_materia"
                android:layout_toRightOf="@id/iv_nombre_materia"
                android:ems="10"
                android:inputType="textPersonName"
                tools:text="Lógica simbólica" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_codigo_materia"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_school_gray_24dp" />

            <TextView
                android:id="@+id/tv_codigo_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/iv_codigo_materia"
                android:layout_toRightOf="@id/iv_codigo_materia"
                android:text="Código" />

            <EditText
                android:id="@+id/et_codigo_materia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_codigo_materia"
                android:layout_toEndOf="@id/iv_codigo_materia"
                android:layout_toRightOf="@id/iv_codigo_materia"
                android:ems="10"
                android:inputType="textPersonName"
                tools:text="CI-2525" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_creditos_materia"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_school_gray_24dp" />

            <TextView
                android:id="@+id/tv_creditos_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/iv_creditos_materia"
                android:layout_toRightOf="@id/iv_creditos_materia"
                android:text="Creditos" />

            <Spinner
                android:id="@+id/sp_creditos_materia"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_creditos_materia"
                android:layout_toEndOf="@id/iv_creditos_materia"
                android:layout_toRightOf="@id/iv_creditos_materia"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nota_materia"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_school_gray_24dp" />

            <TextView
                android:id="@+id/tv_nota_materia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/iv_nota_materia"
                android:layout_toRightOf="@id/iv_nota_materia"
                android:text="Nota" />

            <Spinner
                android:id="@+id/sp_nota_materia"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_nota_materia"
                android:layout_toEndOf="@id/iv_nota_materia"
                android:layout_toRightOf="@id/iv_nota_materia"/>


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>